<ehcache     
    name="SoftwareAG.IS.ART">    
    <diskStore         
        path="./cacheStore/SoftwareAG-IS-ART"/>    
    <defaultCache         
        maxEntriesLocalHeap="0"/>    
    <cache         
        name="ListenerDataStore"         
        eternal="true"         
        maxEntriesLocalHeap="1000">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false"             
            consistency="STRONG">            
            <nonstop/>        
        </terracotta>    
    </cache>    
    <cache         
        name="ListenerStateStore"         
        eternal="true"         
        maxEntriesLocalHeap="1000">        
        <cacheEventListenerFactory             
            class="net.sf.ehcache.event.TerracottaCacheEventReplicationFactory"             
            listenFor="all"/>        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false"             
            consistency="STRONG">            
            <nonstop/>        
        </terracotta>    
    </cache>
</ehcache>
